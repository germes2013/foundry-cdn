---
import * as fs from "fs";

const { dir } = Astro.props;
const assets = fs.readdirSync("./public/assets/" + dir + "/");
---

<h1 class="font-medium text-xl mb-10">
  <a class="text-blue-600 hover:underline hover:text-blue-400" href="/"
    >assets</a
  > / {dir}
</h1>

<div class="flex flex-col gap-2">
  {
    assets.map((asset) => (
      <a
        href={"/assets/" + dir + "/" + asset}
        target="_blank"
        class="text-blue-600 p-2 rounded border hover:text-white hover:bg-blue-600 border-blue-600"
      >
        {asset}
      </a>
    ))
  }
</div>
